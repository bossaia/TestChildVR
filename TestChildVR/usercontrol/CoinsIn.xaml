<Window x:Class="TestChildVR.usercontrol.CoinsIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Background="Cornsilk"
        WindowStyle="None"
        Title="CoinsIn" Height="300" Width="300">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label   Content="投币测试" VerticalAlignment="Center" FontSize="20"  HorizontalAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="1">
            <Label Height="100" Width="100" FontSize="80" x:Name="Coins" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="0"/>
        </Grid>
        <Grid Grid.Row="2">
            <DockPanel>
                <Button Content="测试通过" Background="Cornsilk" x:Name="Pass" Width="150" Click="Pass_OnClick"/>
                <Button Content="测试失败" Background="Cornsilk" x:Name="NotPass" Click="NotPass_OnClick"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
