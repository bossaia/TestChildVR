<UserControl x:Class="TestChildVR.usercontrol.PushCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <RichTextBox Background="Cornsilk" IsEnabled="False" x:Name="PushCardRText"></RichTextBox>
        </Grid>
        <Grid Grid.Row="1">
            <Button Content="吐卡" Background="Cornsilk" x:Name="PushCardBtn" Click="PushCardBtn_Click"/>
        </Grid>
        <Grid Grid.Row="2">
            <Button Content="不通过" Background="Cornsilk" x:Name="NotPassBtn" Click="NotPassBtn_Click"/>
        </Grid>
    </Grid>
</UserControl>
