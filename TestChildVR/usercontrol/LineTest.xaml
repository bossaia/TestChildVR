<UserControl x:Class="TestChildVR.usercontrol.LineTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Cornsilk"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="接线测试" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="1">
            <Label Height="100" Width="100" FontSize="80" x:Name="lines" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="0"/>
        </Grid>
        <Grid Grid.Row="2">
            <DockPanel>
                <Button Content="测试通过" Background="Cornsilk" x:Name="Pass" Width="150" Click="Pass_OnClick"/>
                <Button Content="测试失败" Background="Cornsilk" x:Name="NotPass" Click="NotPass_OnClick" />
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
