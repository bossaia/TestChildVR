<Window x:Class="TestChildVR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="映墨科技测试工具" 
        Background="Cornsilk"
        WindowStartupLocation="CenterScreen"
        Height="350" Width="700">
    <Grid>
        <Grid x:Name="loginGrid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Grid.Column="1">
                <StackPanel>
                    <DockPanel>
                        <Label Content="用户：" />
                        <ComboBox x:Name="Username" IsEditable="True"></ComboBox>
                    </DockPanel>
                    <DockPanel>
                        <Label Content="密码："/>
                        <PasswordBox x:Name="password" ></PasswordBox>
                    </DockPanel>
                    <Button Content="登入" x:Name="login" Width="100" Height="30" Margin="10" Click="Login_OnClick"></Button>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid x:Name="testGrid" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                    <Button Content="开始检测"  x:Name="StartCheck" Click="StartCheck_OnClick"></Button>
            </Grid>
            <Grid Grid.Column="1">
                <RichTextBox x:Name="myRichTextBox" Background="Cornsilk"  FontSize="12"></RichTextBox>
            </Grid>
        </Grid>

    </Grid>
</Window>
